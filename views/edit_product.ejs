<!DOCTYPE html>
<html>
<head>
    <% include blocks/links.ejs %>
    <title> <%= title %> </title>
</head>
<body>

<% include blocks/menu.ejs %>

<div id="main">
  <span style="font-size:30px;cursor:pointer" onclick="openNav()">&#9776;</span>
  <i class="fas fa-crown" style="font-size:35px;color:slategray;text-shadow:2px 2px 4px #000000;"></i>

    <div class="form-add" style="height:860px">
        <h2><%= title %></h2>

        <form method="POST" action="/products/edit/<%= product._id %>">
            <div class="row">
                <div class="col">
                        <div class="form-group">
                            <label for="Name">Name:</label>
                            <input type="name" name="name" class="form-control" id="name" placeholder="name" value="<%= product.name %>">
                        </div>
                            <div class="form-group">
                              <label for="Producer">Producer:</label>
                              <input type="producer" name="producer" class="form-control" id="producer" placeholder="producer" value="<%= product.producer %>">
                        </div>
                        <div class="form-group">
                          <label for="Volume">Volume:</label>
                          <input type="volume" name="volume" class="form-control" id="volume" placeholder="volume" value="<%= product.volume %>">
                        </div>
                            <div class="form-group">
                              <label for="Classification">Classification:</label>
                              <input type="classification" name="classification" class="form-control" id="classification" placeholder="classification" value="<%= product.classification %>">
                        </div>
                        <div class="form-group">
                          <label for="Made_in">Made in:</label>
                          <input type="made_in" name="made_in" class="form-control" id="made_in" placeholder="made_in" value="<%= product.made_in %>">
                        </div>
                      </div>
                      <div class="form-group">
                          <label for="Pageid">Pageid:</label>
                          <input type="pageid" name="pageid" class="form-control" id="pageid" placeholder="pageid" value="<%= product.pageid %>">
                      </div>
                      <div class="form-group">
                          <label for="Price">Price:</label>
                          <input type="price" name="price" class="form-control" id="price" placeholder="price" value="<%= product.price %>">
                      </div>
                      <div class="form-group">
                          <label for="Discount">Discount:</label>
                          <input type="discount" name="discount" class="form-control" id="discount" placeholder="discount" value="<%= product.discount %>">


                        <button>Confirm</button>
                </div>

            </div>
        </form>

    </div>


</div>

<% include blocks/footer.ejs %>

  <script src="/scripts/menuScript.js"></script>
  <% include blocks/script_links.ejs %>
  </body>
  </html>
