<!DOCTYPE html>
<html>
<head>
    <% include blocks/links.ejs %>
        <title> <%= title %> </title>
</head>
<body>

<% include blocks/menu.ejs %>

<div id="main">
  <% include blocks/register_menu.ejs %>
      <h1>All products:</h1>
      <% include messaging_layout.ejs %>
       <ul class="list-group">
   <% products.forEach(function(product) { %>
       <li class = "list-group-item"><a href="/products/<%= product._id %>"><%= product.name %></a> - <%= product.producer %></li>
   <% }); %>
   </ul>
   <p></p>
       <div class="container">
           <div class="row">
               <% products.forEach(function(product) { %>
                   <div class="card col-sm-6 col-lg-4" style="margin-bottom: 20px">
                       <img src="/images/dior_lip_maximazer.jpg" alt="comp" style="width:100%; height: auto;">
                    <h2><a href="/products/<%= product._id %>"><%= product.model %></a></h2>
                       <p></p>
                    <p><a href="/products/<%= product._id %>" target="_parent"><button>Buy</button></a></p>
                   </div>
               <% }); %>
           </div>
       </div>


    <% include blocks/footer.ejs %>


</div>
<% include blocks/footer.ejs %>
<script src="/scripts/menuScript.js"></script>
  <% include blocks/script_links.ejs %>
</body>
</html>
