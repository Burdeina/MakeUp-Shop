<!DOCTYPE html>
<html>
<head>
    <% include blocks/links.ejs %>
    <title> Register </title>
</head>
<body>

<% include blocks/menu.ejs %>

<div id="main">
  <span style="font-size:30px;cursor:pointer" onclick="openNav()">&#9776;</span>
  <i class="fas fa-crown" style="font-size:35px;color:slategray;text-shadow:2px 2px 4px #000000;"></i>

    <% include messaging_layout.ejs %>
    <% if(errors) {%>
        <% errors.forEach(function (error) { %>
            <div class = "alert alert-danger"> <%= error.msg %> </div>
        <% }) %>
    <% } %>
    <div class="form-add">
    <p></p>
        <i class='fab fa-facebook' style="font-size:40px;color:black;"></i>
        <i class='fab fa-instagram' style="font-size:40px;color:black;"></i>
        <i class='fab fa-linkedin' style="font-size:40px;color:black;"></i>

        <h2>Registration form:</h2>
        <form method="POST" action="/users/register">
            <div class="row">
                <div class="col">
                        <div class="form-group">
                            <label for="Name">Name:</label>
                            <input type="text" name="name" class="form-control" id="name" placeholder="name">
                        </div>
                            <div class="form-group">
                            <label for="Email">Email:</label>
                            <input type="text" name="email" class="form-control" id="email" placeholder="email">
                        </div>
                        <div class="form-group">
                            <label for="Username">Username:</label>
                            <input type="text" name="username" class="form-control" id="username" placeholder="username">
                        </div>
                            <div class="form-group">
                            <label for="Password">Password:</label>
                            <input type="password" name="password" class="form-control" id="password" placeholder="password">
                        </div>
                        <div class="form-group">
                            <label for="SSD">Confirm password:</label>
                            <input type="password" name="password2" class="form-control" id="password" placeholder="password">
                        </div>
                        <br>
                        <button>Register</button>
                </div>
            </div>
        </form>
    </div>


</div>

<% include blocks/footer.ejs %>

  <script src="/scripts/menuScript.js"></script>
  <% include blocks/script_links.ejs %>
  </body>
  </html>
